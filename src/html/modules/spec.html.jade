
section.spec-module
  .container.mobile-container-padded
    .grid
      .span12.spec-title-link
        a(href="#") Vaio Z

    .grid
      h1.spec-title.pull-left Vaio Z Details
      p.sony-recommends.pull-right Sony Recommends

    .grid
      ul.spec-views.inline.p3
        li.active: a(href="spec_module.html") Specifications
        li: a(href="details_module.html") Features


  .tab-strip.visible-phone

  numModels = 6

  .spec-products
    .container.mobile-container-padded
      // Wrap in a px grid?
      .span2.details-labels-wrap.hidden-phone
        .detail-labels-wrapping.complete
          .product-count-wrap.table-center-wrap
            .table-center
              span.text-dark.product-count= numModels
              |  Models

          .detail-label-group
            each label in data.labels
              .l3.detail-label.detail= label

      .spec-items-wrap
        .spec-items-container
          each module in data.submodules
            d = locals.data(module.data)
            if d.type == "product"
              a = d.view = "specs"
              e = { "locals" : locals, "data" : d, "labels" : data.labels }
              i= a
              b= e
              !{locals.partial('modules/' + module.type, e )}