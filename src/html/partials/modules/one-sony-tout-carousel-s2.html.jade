section(class='sony-one-carousel', data-mode=data.mode)
	.soc-container
		.soc-container-inner
			for slide in data.slides
				.soc-content
					.soc-grid(class='slimgrid')
						for item in slide
							- clsss = item.typeLayout + ' ' + item.typeAlign + ' ' + item.content
							l = item.objectSize
							if l == 'span8'
								- c = 'soc-3up span8 iq-img ' + clsss 
							else if l == 'span4'
								- c = 'soc-1up span4 iq-img ' + clsss
							else if l == 'span6'
								- c = 'soc-2up span6 iq-img ' + clsss
							.soc-item(class=c, data-src=item.backgroundImgSrc)
								.soc-item-content
									if item.content == 'cHE'
										a(class='eyebrow l5', href=item.eyebrow.link)
											| !{item.eyebrow.title}
										h3
											| !{item.headline.title}
											a(href=item.headline.link)
												| !{item.headline.emphasis}									


