.container(style='margin-top: 75px;')
  .grid
    h2.l1 #{data.config.title}

.sony-one-carousel(data-mode = data.config.mode, data-module-name != data.config.module_name, data-module-id = data.config.module_id)
  .soc-container
    .soc-container-inner
      for slide in data.slides
        .soc-content
          .soc-grid(class='slimgrid')
            for item in slide
              - textStyle   = item.typeLayout
              - alignment   = item.typeAlignment
              - contentType = item.contentType
              l = item.objectSize
              if l == 'span8'
                - c = 'soc-3up span8 iq-img'
                - s = 'content-8'
              else if l == 'span4'
                - c = 'soc-1up span4 iq-img'
                - s = 'content-4'
              else if l == 'span6'
                - c = 'soc-2up span6 iq-img'
                - s = 'content-6'
              .soc-item(class=c, data-src=item.backgroundImgSrc)(class=s)
                article
                  .soc-item-content(class=contentType)(class=textStyle)(class=alignment)(class=s)
                    if s == 'content-8'
                      //- HEADLINE ONLY
                      if contentType == 'headline-only'
                        h3.headline!= item.headline.title
                          if item.headline.link
                            a(href=item.headline.link)
                              | !{' ' + item.headline.linkText}
                              i.fonticon-10-chevron--after

                      //- HEADLINE ONLY
                      if contentType == 'headline-counter'
                        h3.headline!= item.headline.title
                          if item.headline.link
                            a(href=item.headline.link)
                              | !{' ' + item.headline.linkText}
                              i.fonticon-10-chevron--after

                      //- HEADLINE ONLY
                      if contentType == 'headline-copy'
                        h3.headline!= item.headline.title
                          if item.headline.link
                            a(href=item.headline.link)
                              | !{' ' + item.headline.linkText}
                              i.fonticon-10-chevron--after
                        p.p3= item.bodycopy

                      //- HEADLINE, EYEBROW, COPY
                      if contentType == 'headline-eyebrow-copy'
                        a.eyebrow(href=item.eyebrow.link)
                          | #{item.eyebrow.title}
                        h3.headline!= item.headline.title
                          if item.headline.link
                            a(href=item.headline.link)
                              | !{' ' + item.headline.linkText}
                              i.fonticon-10-chevron--after
                        p.p3= item.bodycopy

                      //- HEADLINE, COPY , COUNTER
                      if contentType == 'headline-copy-counter'
                        h3.headline!= item.headline.title
                          if item.headline.link
                            a(href=item.headline.link)
                              | !{' ' + item.headline.linkText}
                              i.fonticon-10-chevron--after
                        p.p3= item.bodycopy

                      //- HEADLINE, EYEBROW
                      if contentType == 'headline-eyebrow'
                        a.eyebrow(href=item.eyebrow.link)
                          | #{item.eyebrow.title}
                        h3.headline!= item.headline.title
                          if item.headline.link
                            a(href=item.headline.link)
                              | !{' ' + item.headline.linkText}
                              i.fonticon-10-chevron--after

                    if s == 'content-6'
                      //- HEADLINE ONLY
                      if contentType == 'headline-only'
                        h4.headline!= item.headline.title
                          if item.headline.link
                            a(href=item.headline.link)
                              | !{' ' + item.headline.linkText}
                              i.fonticon-10-chevron--after

                      //- HEADLINE ONLY
                      if contentType == 'headline-counter'
                        h4.headline!= item.headline.title
                          if item.headline.link
                            a(href=item.headline.link)
                              | !{' ' + item.headline.linkText}
                              i.fonticon-10-chevron--after

                      //- HEADLINE ONLY
                      if contentType == 'headline-copy'
                        h4.headline!= item.headline.title
                          if item.headline.link
                            a(href=item.headline.link)
                              | !{' ' + item.headline.linkText}
                              i.fonticon-10-chevron--after
                        p.p3= item.bodycopy

                      //- HEADLINE, EYEBROW, COPY
                      if contentType == 'headline-eyebrow-copy'
                        a.eyebrow(href=item.eyebrow.link)
                          | #{item.eyebrow.title}
                        h4.headline!= item.headline.title
                          if item.headline.link
                            a(href=item.headline.link)
                              | !{' ' + item.headline.linkText}
                              i.fonticon-10-chevron--after
                        p.p3= item.bodycopy

                      //- HEADLINE, COPY , COUNTER
                      if contentType == 'headline-copy-counter'
                        h4.headline!= item.headline.title
                          if item.headline.link
                            a(href=item.headline.link)
                              | !{' ' + item.headline.linkText}
                              i.fonticon-10-chevron--after
                        p.p3= item.bodycopy

                      //- HEADLINE, EYEBROW
                      if contentType == 'headline-eyebrow'
                        a.eyebrow(href=item.eyebrow.link)
                          | #{item.eyebrow.title}
                        h4.headline!= item.headline.title
                          if item.headline.link
                            a(href=item.headline.link)
                              | !{' ' + item.headline.linkText}
                              i.fonticon-10-chevron--after

                    if s == 'content-4'
                      //- HEADLINE ONLY
                      if contentType == 'headline-only'
                        h4.headline!= item.headline.title
                          if item.headline.link
                            a(href=item.headline.link)
                              | !{' ' + item.headline.linkText}
                              i.fonticon-10-chevron--after

                      //- HEADLINE, EYEBROW
                      if contentType == 'headline-eyebrow'
                        a.eyebrow(href=item.eyebrow.link)
                          | #{item.eyebrow.title}
                        h4.headline!= item.headline.title
                          if item.headline.link
                            a(href=item.headline.link)
                              | !{' ' + item.headline.linkText}
                              i.fonticon-10-chevron--after

                  if s == 'content-8' || s == 'content-6'
                    //- COUNTER
                    if contentType == 'headline-counter' || contentType == 'headline-copy-counter'
                      .counter(class=contentType)(class=textStyle)(class=alignment)(class=s)
                        - counterText = item.counter.total + ' ' + item.counter.text
                        h3.l2= counterText

