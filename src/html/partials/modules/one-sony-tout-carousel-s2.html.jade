section(class='sony-one-carousel', data-mode=data.mode)
	.soc-container
		.soc-container-inner
			for slide in data.slides
				.soc-content
					.soc-grid(class='slimgrid')
						for item in slide
							l = item.objectSize
							if l == 'span8'
								- c = 'soc-3up span8 iq-img ' + item.typeLayout
							else if l == 'span4'
								- c = 'soc-1up span4 iq-img ' + item.typeLayout
							else if l == 'span6'
								- c = 'soc-2up span6 iq-img ' + item.typeLayout
							.soc-item(class=c, data-src=item.backgroundImgSrc)
								if item.hasFooter
									footer(class='footer')
										if item.eyebrow
											a(class='eyebrow l3', href=item.eyebrow.link)
												| !{item.eyebrow.title}
										if item.headline 
											h3
												| !{item.headline.title}
												a(href=item.headline.link)
													| !{item.headline.emphasis}
								else
									if item.eyebrow
										a(class='eyebrow l3', href=item.eyebrow.link)
											| !{item.eyebrow.title}
									if item.headline 
										h3
											| !{item.headline.title}
											a(href=item.headline.link)
												| !{item.headline.emphasis}
									if item.promo
										- clss = 'soc-button ' + item.promo.variation
										a(class=clss, href=item.promo.link)
											if item.promo.imgSrc
												img(class='iq-img', alt=item.promo.imgAlt, data-src=item.promo.imgSrc)
												noscript
													img(alt=item.promo.imgAlt, src=item.promo.imgSrc)
											| !{item.promo.title}            