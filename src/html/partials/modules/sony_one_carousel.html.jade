section(class='sony-one-carousel container full-bleed-no-max', data-mode=data.mode)
	.soc-container
		.soc-container-inner
			for slide in data.slides
				.soc-content
					.soc-grid(class='grid grid-small')
						for item in slide
							l = item.layout
							if l == '3up'
								- c = 'soc-3up span8 iq-img ' + item.colorScheme
							else if l == '1up'
								- c = 'soc-1up span4 iq-img ' + item.colorScheme
							.soc-item(class=c, data-src=item.backgroundImgSrc)
								if item.hasFooter
									footer(class='footer')
										if item.fingertip
											a(class='fingertip l3', href=item.fingertip.link)
												| !{item.fingertip.title}
										if item.headline 
											h4
												| !{item.headline.title}
												| &nbsp;
												span
													| !{item.headline.emphasis}
								else
									if item.fingertip
										a(class='fingertip l3', href=item.fingertip.link)
											| !{item.fingertip.title}
									if item.headline 
										h4
											| !{item.headline.title}
											| &nbsp;
											span
												| !{item.headline.emphasis}
									if item.button
										- clss = 'soc-button ' + item.button.variation
										a(class=clss, href=item.button.link)
											if item.button.imgSrc
												img(class='iq-img', alt=item.button.imgAlt, data-src=item.button.imgSrc)
												noscript
													img(alt=item.button.imgAlt, src=item.button.imgSrc)
											| !{item.button.title}            