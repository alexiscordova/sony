title Sony Global

include meta.html
include fonts.html

l = {"locals": locals}

  // modernizr needs to load right after the fonts.com script, which has to be in head to prevent FOUT.
  script(src = "js/libs/modernizr.js")

  link(rel="stylesheet", href="css/styles.css")

  <!--[if (gt IE 9)|!(IE)]><!-->
  link(rel="stylesheet", href="css/responsive.css")
  <!--<![endif]-->

  for name in locals.modulescss()
    hrf = "css/modules/" + name.replace(/.scss/g, '.css')
      link(rel="stylesheet", href= hrf)

  <!--[if (gt IE 9)|!(IE)]><!-->
  link(rel="stylesheet", href="css/responsive-modules.css")
  <!--<![endif]-->

  if 'debug' == locals.getEnvironments() || 'mbuilder' == locals.getEnvironments()

    //if lt IE 9
      for name in locals.polyfills()
        sr = "js/libs/polyfill/" + name
        script(src = sr)

    //if lt IE 8
      for name in locals.polyfillsie7()
        sr = "js/libs/polyfill-lte-ie7/" + name
        script(src = sr)

  else

    //if lt IE 9
      script(src="js/polyfill.min.js")
