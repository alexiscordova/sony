mixin inchesString(inches)
  - inches = "(" + inches + "\")"
  p.inches !{inches}

mixin cmString(cm)
  p.centimeters
    | #{cm}cm

//- mixin measurementValues(value, dir, isThin)
mixin measurementValues(value, dir)
  - c = [dir + "-measurement"]

  div(class = c)
    div.units-container
     +cmString(value.cm)

     if (value.inches)
       +inchesString(value.inches)

mixin measurementsList(measurements)
  if measurements
    - measurementClasses = ["measurement","p4"]

    if (measurements.length > 1)
      - measurementClasses.push("multi")

    for m in measurements
      if(m.image.srcDesktop)
        - cm = m.height.cm
        - inches = m.width.inches
        - topWrapperClasses = ["top-wrapper"]

        if(m.thinImage)
          - topWrapperClasses.push("is-thin")

        div(class= measurementClasses)
          .wrapper
            div(class= topWrapperClasses)
              .img-wrapper
                +iQImage(m.image, "pd-image")

              if (cm)
                +measurementValues(m.height, "vertical")

            if (inches)
              +measurementValues(m.width, "horizontal")

mixin featureList(list)
  - listClasses = 'feature-list'
  ul(class=listClasses)
    if list
      each li in list
        - copyClasses = ["copy", "ghost-center"]

        //- at least copy required
        if (li.copy)
          li
            .ghost-center-wrap
              if (li.icon)
                - iconClasses = ["icon", "ghost-center"]
                - copyClasses.push("with-icon")
                p(class= iconClasses)
                  i(class= li.icon)

              p(class= copyClasses)
                span #{li.copy}
                if (li.link)
                  +link( {"title" : li.linkLabel, "text" : li.linkLabel, "href" : li.link ,"target" : "_blank"}, [ "no-wrap" ] )

mixin specsList( list, isHorizontal )
  - isHorizontal = isHorizontal || false
  - c = isHorizontal ? 'dl-horizontal' : null
  if list
    dl(class=c)
      each li in list
        dt.l3
          strong !{li.title}
        if li.copy
          dd.p3 !{li.copy}

mixin extras(extras)
  if extras
    for extra in extras
      if(extra.copy && extra.title)
        .extra
          p.l3
            strong !{extra.title}
          p.p3 !{extra.copy}

mixin bottomTout(textTout)
  div(class= btmToutClasses)

    if (textTout.icon)
      - bottomCopyClasses.push("with-icon")
      div(class= bottomIconClasses)
        img(src= textTout.icon)

    if (textTout.copy)
      div(class= bottomCopyClasses)
        //- need another div to allow overflow to work again (not table-cell)
        .no-overflow
          span #{textTout.copy}
          if(textTout.link && textTout.linkLabel)
            +link( {"title" : textTout.linkLabel, "text" : textTout.linkLabel, "href" : textTout.link ,"target" : "_blank"}, [ "no-wrap" ] )

mixin bottomButton(btn)
  if(btn.buttonLabel && btn.buttonLink)
    div(class= btmButtonClasses)
      +link( {"title" : btn.buttonLabel, "text" : btn.buttonLabel, "href" : btn.buttonLink,"target" : "_blank"}, [ "btn", "buttonLabel" ] )

