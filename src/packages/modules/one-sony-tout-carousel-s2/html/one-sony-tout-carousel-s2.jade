include ../../../common/html/jade-helpers.jade
+includeCSS('one-sony-tout-carousel-s2')
+includeJavascriptModule('one-sony-tout-carousel-s2')

div(id = data.id ? data.id : false)

  if data.config.title
    .container.st-header
      .grid
        h2.l1 #{data.config.title}

  .one-sony-carousel.secondary-tout
    .st-container
      .st-container-inner.container.sony-carousel-flex
        for slide in data.slides
          - slide.largeTout = true
          .st-content.slimgrid
            e = {"locals": locals, "content": slide}
            !{locals.partial('packages/modules/secondary-touts-s1-s4/html/secondary-touts-s1-s4.jade', e)}
