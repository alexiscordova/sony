include ../../../common/html/jade-helpers.jade
+includeJavascriptModule('editorial-hotspots-e6')

mixin hotspotCore(hotspotData)
  .hspot-outer(data-x="0",data-y="0")
    .hspot-core
      .hspot-indicator
        img(src="img/editorial-hotspots-e6/hotspot-indicator.png");
    .overlay-variant1.hidden
      .top top
      .middle middle
      .footer foot

type = data.type

section.ehs-wrapper.container.full-bleed-no-max.m-full-bleed(id=data.id)
case type
  when "full-bleed-header-left"
    .ehs.full-bleed-header-left.container
      .grid
        .span12
          .hotspot-outer
            img(class="iq-img", alt=data.hostspotContainerImage.alt, data-src=data.hostspotContainerImage.src)
            - for hotstpot in data.hotspots
              +hotspotCore(hotstpot)
