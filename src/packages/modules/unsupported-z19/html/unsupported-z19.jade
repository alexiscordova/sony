include ../../../common/html/jade-helpers.jade
+includeCSS('unsupported-z19')
+includeJavascriptModule('unsupported-z19')

mixin browserLink( browser, description )
  +link( browser, [ "browser-link", "media" ], undefined, undefined, true )
    .pull-left
      +iQImage( browser.img, "media-object" )
    .media-body
      .media-hd.p2 !{ browser.text }
      .media-bd.p3 !{ description }


.container
  .grid.text-center
    a.btn.launch-modal(href="#unsupported-browser-modal", style="margin-top: 200px;") Launch Unsupported Browser Modal

#unsupported-browser-modal.modal.modal-unsupported.hide.fade(tabindex="-1", role="dialog", aria-labelledby="unsupported-browser-label", aria-hidden="true")
  .container
    .modal-inner.grid
      .modal-header
        button.box-close(data-dismiss="modal", aria-hidden="true")
          i.fonticon-10-x-skinny
      .modal-body
        .unsupported
          .unsupported-hd
            h2.t2 !{ data.title }
          .unsupported-bd
            p.p3 !{ data.subtitle.desktop }
          .unsupported-bd-alt
            p.p3 !{ data.subtitle.mobile }
          .container.full-bleed.browser-list
            if data.browsers && data.browsers.length > 0
              - for (i = 0; i < data.browsers.length; i += 2) {
                .grid
                  .span6
                    +browserLink( data.browsers[ i ], data.download )
                  .span6
                    +browserLink( data.browsers[ i + 1 ], data.download )
              - }

          a(href="#").lt3.link-proceed.close-modal !{ data.proceed }
          a(href="#").btn.btn-medium.close-modal !{ data.proceed }
