include ../../../common/html/jade-helpers.jade
+includeJavascriptModule('ux-marketing-convergence-e14')

section.container.uxmc

  div.grid
    h2.l1 #{data.header}

  div.grid.uxmc-container(class=['mode-'+data.mode.toLowerCase()])

    div.btn-reload-container
      a.fonticon-30-plus.btn-reload(title='Load another product to go with your ' + data.baseProduct.title, href='#')

    div.base-product
      div.uxmc-overlay
        h3 #{data.baseProduct.title}
      div.uxmc-image-wrapper.iq-img(data-src-desktop=data.baseProduct.imgSrcDesktop, data-src-tablet=data.baseProduct.imgSrcTablet, data-src-phone=data.baseProduct.imgSrcPhone, data-src-desktop-highres=data.baseProduct.imgSrcDesktopHighRes, data-src-tablet-highres=data.baseProduct.imgSrcTabletHighRes, data-src-phone-highres=data.baseProduct.imgSrcPhoneHighRes)
        span
        img.iq-img(data-src-desktop=data.baseProduct.imgSrcDesktop, data-src-tablet=data.baseProduct.imgSrcTablet, data-src-phone=data.baseProduct.imgSrcPhone, data-src-desktop-highres=data.baseProduct.imgSrcDesktopHighRes, data-src-tablet-highres=data.baseProduct.imgSrcTabletHighRes, data-src-phone-highres=data.baseProduct.imgSrcPhoneHighRes)

    ul.partner-products
      for product in data.partnerProducts     
        li
          div.uxmc-overlay
            p #{product.topLine}
            a.fonticon-10-chevron--after.uxmc-link(href=product.link, title=product.altText) #{product.linkText}
          div.uxmc-image-wrapper.iq-img(data-src-desktop=product.imgSrcDesktop, data-src-tablet=product.imgSrcTablet, data-src-phone=product.imgSrcPhone, data-src-desktop-highres=product.imgSrcDesktopHighRes, data-src-tablet-highres=product.imgSrcTabletHighRes, data-src-phone-highres=product.imgSrcPhoneHighRes)
            span
            img.iq-img(data-src-desktop=product.imgSrcDesktop, data-src-tablet=product.imgSrcTablet, data-src-phone=product.imgSrcPhone, data-src-desktop-highres=product.imgSrcDesktopHighRes, data-src-tablet-highres=product.imgSrcTabletHighRes, data-src-phone-highres=product.imgSrcPhoneHighRes)

    ul.partner-products-backgrounds
      for product in data.partnerProducts
        li(class=['theme-'+product.theme.toLowerCase()])
        
    
    div.progress-indicators
      div
        - for (var i = 1; i <= data.partnerProducts.length; i++)
          div.uxmc-dial-wrapper
            span.uxmc-dial-label #{i}
            input.uxmc-dial(type='text', value='0')
