include ../../../common/html/jade-helpers.jade
+includeCSS('all-electronics-z04')

+mainElement( ["all-electronics", "container" ] )
  .grid.products-w-electronics
    each category in data.electronics_all
      .products-w
        if category.description
          .products-hdg-desc
            h4.t4-bold= category.label
            .products-desc
              .p2= category.description
        else
          .products-hdg
            h4.t4-bold= category.label

        if category.link
          .products-link
            +link( category.link, [ "btn" ] )

        .products-section-main
          ul.products-list-main
            each product in category.menu_main.menu_items
              li.products-li
                +link( product, [ "products-li-link", "tl" ], undefined, undefined, true )
                  span.product-img-w
                    +iQImage(product.img)
                  span.nav-label.p3-bold= product.text

        if category.menu_secondary != null
          .products-section-secondary
            h6.l2= category.menu_secondary.title
            ul.products-list-secondary
              each item in category.menu_secondary.menu_items
                li.products-li
                  +link( item, [ "products-li-link", "p3" ] )

