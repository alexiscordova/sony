include ../../../common/html/jade-helpers.jade
+includeCSS('error-pages-z18')

.container.error-pages
  .grid
    .content
      h2.t2= data.title
      p= data.subtitle

      if data.errortype == "404" || data.errortype == "500"
        a.btn.btn-large(href=data.buttonLink)= data.buttonText

      else if data.errortype == '503'
        .error-box
          p= data.boxtext
