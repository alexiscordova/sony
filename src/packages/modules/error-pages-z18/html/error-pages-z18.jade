include ../../../common/html/jade-helpers.jade
+includeCSS('error-pages-z18')

.error-pages
  .grid.no-grid-at-767
    .content
      .error-content-main.span8
        .error-content-inner
          h2.t2= data.title
          .error-content-paragraph
            p.p2= data.subtitle
  
          if data.errortype == "404" || data.errortype == "500"
            a.btn(href=data.buttonLink)= data.buttonText
  
          else if data.errortype == '503'
            .error-box
              p.p3= data.boxtext
