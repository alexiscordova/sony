include ../../../common/html/jade-helpers.jade
+includeCSS('sony-video')
+includeJavascriptModule('sony-video')


- desc = 'Here are some modules with unique data:'

if data.variation == 'full-bleed'
	div(class='sony-video ' + data.variation , data-variation=data.variation)
		div(class='full-bleed-video-wrap')
			+sonyVideo(data.video)
else
	div(class='sony-video ' + data.variation , data-variation=data.variation)
		+sonyVideo(data.video)