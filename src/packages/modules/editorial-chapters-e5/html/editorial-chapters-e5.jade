include ../../../common/html/jade-helpers.jade
+includeJavascriptModule('editorial-chapters-e5')

- desc = 'Here are some modules with unique data:'

//- Mixin for slides
mixin editorialSlide(data)
  for slide in data.submodules
    slideData = locals.data( slide.data )
    .editorial-carousel-slide( class= slideData.variation, data-mode=slideData.mode )
      +partial(slide.type, slide.data)

//- Main section wrapper for slides
section(class='editorial-chapters-container a1')
  div(class='editorial-chapters container')
    div(class='editorial-carousel-wrapper')
      div(class='editorial-carousel')
        +editorialSlide(data)