include ../../../common/html/jade-helpers.jade
+includeJavascriptModule('editorial-chapters-e5')

mixin thumb-nav
  ul.thumb-nav.container
    for slide in data.submodules
      li
        if slide.thumb
          +iQImage(slide.thumb)
        if slide.icon
          i(class=slide.icon)
        if slide.label
          span= slide.label

mixin carousel
  div(class='editorial-carousel-wrapper')
    div(class='editorial-carousel')
      for slide in data.submodules
        .editorial-carousel-slide
          +partial(slide.type, slide.data)

section.editorial-chapters-container( class=data.config.shade+' '+data.config.nav.location+'-nav '+data.config.nav.placement+'-nav '+data.config.nav.mode+'-mode' )
  div(class='editorial-chapters')
    if data.config.nav.location == "top" && data.config.nav.placement == "offset"
      +thumb-nav
      +carousel
    else
      +carousel
      +thumb-nav