include ../../../common/html/jade-helpers.jade
+includeCSS('utility-links-pdp-d8')

section.ulinks-pdp-wrapper.container.full-bleed-no-max.m-full-bleed
    section.ulinks-body-wrapper.container
        div.ulinks-body.grid
          div(id="pdp-product-image").ulinks-pdp-module.span3.m-span3.table-center-wrap
            - image = data.image
            img(class=image.classes, data-src-desktop=image.srcDesktop, data-src-tablet=image.srcTablet, data-src-phone=image.srcPhone, data-src-desktop-highres=image.srcDesktopHighRes, data-src-tablet-highres=image.srcTabletHighRes, data-src-phone-highres=image.srcPhoneHighRes)
            noscript
              img(src=image.noscriptsrc)
          div.ulinks-pdp-module.span9.table-center-wrap
            #pdp-g-head.grid
              .span4.t7.pdp-help-title
                div #{data.header}
            #pdp-g-links.grid
              - for(var i=0; i<data.links.length; i++)
                  linkLabel = data.links[i].label
                  linkUrl = data.links[i].url
                  nextId = "pdp-link-tail"+i
                  if(i==2)
                    div(id=nextId).span4.drop-at-767
                      a(href=linkUrl).pdp-help.lt3 #{linkLabel}
                  else if(i>=3)
                    div(id=nextId).span4
                      a(href=linkUrl).pdp-help.lt3 #{linkLabel}
                  else
                    div(id=nextId).span4
                      a(href=linkUrl).pdp-help.lt3 #{linkLabel}