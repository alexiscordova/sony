include ../../../common/html/jade-helpers.jade
+includeJavascriptModule('recently-viewed')

.recently-viewed
  .container.rv-title
    .grid
      h6(class='t6-light')= data.title
  .container.rv-carousel
    .slimgrid
      .span12
        div.carousel
          div.sony-carousel-wrapper
            div.sony-carousel
              i = 0
              for module in data.submodules
                d = locals.data(module.data)
                  - d.layout = 'medium'
                  - d.view = 'basic'
                  e = { 'locals' : locals , 'data' : d }
                  div.sony-carousel-slide
                    div.sony-carousel-slide-children
                      !{locals.partial(module.type , e )}