.featured-result
  h3.p3.results
    span.bold-dark #{data.results.count}
    |  Results
  form.visible-phone.select-narrow
    select
      option= data.narrowResultsPlaceholderText
  .media
      e = { "locals" : locals, "data" : {"view": "blank"}, "labels" : data.labels }
      !{locals.partial( 'packages/modules/product/html/product.jade', e )}

    .img.img-lg.no-float
      img(src="img/search-results-z07/product-img.jpg")
    .bd.feature-text
      h3.t5.title Nex 6
      .reviews-copy
        span.p5 Stars here (41 Users reviews)
      p.p4 Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc sed diam lectus, nec dictum erat dolor sit amet.
      ul.h-list.h-list-md
        li.lt3
          a(href="#") Accessories
        li.lt3
          a(href="#") Support
  .accessories-hd
    h4.l3 Popular Nexus Accessories
  ul.h-list.h-list-md.accessories-list
    li
      a(href="#")
        img(src="img/search-results-z07/accessories-img.jpg")
        .accessories-copy.p4 32 GB SDHC <br /> Memory
      li
        a(href="#")
          img(src="img/search-results-z07/accessories-img.jpg")
          .accessories-copy.p4 32 GB SDHC <br /> Memory
      li
        a(href="#")
          img(src="img/search-results-z07/accessories-img.jpg")
          .accessories-copy.p4 32 GB SDHC <br /> Memory
      li
        a(href="#")
          img(src="img/search-results-z07/accessories-img.jpg")
          .accessories-copy.p4 32 GB SDHC <br /> Memory
ul.results-list
  each item in data.results.items
    li
      a(href="#")
        .media
          .img
            +iQImage(item.image)
          .bd
            h4.lt3
              a(href= item.url)= item.headline

            if item.question
              h5.lt4.italic-hd
                a(href= item.question.url)= item.question.text

            p.p4= item.body

            if item.related
              ul.h-list.h-list-md
                each link in item.related
                  li.lt4
                    a(href= link.url)= link.text
