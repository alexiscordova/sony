mixin eyebrow(_data)
  d = _data ? _data : data
  if d.eyebrow
    if d.eyebrow.link
      a.eyebrow(href= d.eyebrow.link)
        i.fonticon-10-chevron-reverse
        | !{locals.plusify(d.eyebrow.text)}

    else
      h2.t7.eyebrow!= locals.plusify(d.eyebrow.text)

mixin header(_data)
  d = _data ? _data : data
  if d.variation
    if d.variation.quote
      blockquote.bq1
        p!= d.quote
      p.p3!= d.byline
    else
      if d.variation.headertext == "larger"
        h1!= d.headline
      else if d.variation.headertext == "smaller"
        h1.t3!= d.headline
      else
        h1.t2!= d.headline

mixin bodytext(_data, _extra)
  d = _data ? _data : data
  e = _extra ? _extra : ""
  if d.variation
    if d.variation.headertext == "larger"
      e = e + " hidden-phone"
  if d.body
    p.p3(class= e)!= d.body

mixin links(_data, _extra)
  d = _data ? _data : data
  if d.links
    for link in d.links
      e = _extra ? _extra : ""
      case link.type
        when "btn"
          a(class= e)(class= "btn", href= link.url)!= link.text
        when "video"
          if data.mode !== "product-intro-plate"
            e = e + " btn btn-special"
          a(class = "video")(class= e)(href= link.url)
            i.fonticon-15-circle-play
            span!= link.text
        when "gallery"
          if data.mode !== "product-intro-plate"
            e = e + " btn"
          a(class = "gallery")(class= e)(href= link.url)
            i.fonticon-15-popup
            span!= link.text
        when "text"
          a(class= e)( href= link.url)!= link.text

mixin boxclass(_layout)
  layout = _layout ? _layout : data.layout
  .box(class = layout.alignment)
    block

mixin boxlayout(_layout, _style)
  layout = _layout ? _layout : data.layout
  classes = _style ? _style : data.style 
  if data.variation
    if data.variation.mobilealign
      classes = classes + " " + data.variation.mobilealign
    else
      classes = classes + " bottom"
  if layout.text == "left" || layout.text == "full"
    .container.inner(class= classes)
      .grid.no-grid-at-767
        - span = "span" + layout.columns[0]
        div(class= span)
          .table-center-wrap
            .table-center
              +boxclass
                block
  else if layout.text == "right" || layout.text == "center"
    .container.inner(class= classes)
      .grid.no-grid-at-767
        - span = "span" + layout.columns[1]
        - offset =  "offset" + layout.columns[0]
        div(class= span)(class= offset)
          .table-center-wrap
            .table-center
              +boxclass
                block

