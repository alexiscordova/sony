        if data.variation.backgroundstyle
          if data.variation.backgroundstyle == "full-bleed"
            !{locals.partial('packages/modules/image/html/image.jade' , e)}  
          else
            .image-module
      else        
        !{locals.partial('packages/modules/image/html/image.jade' , e)}

    +boxlayout
      +eyebrow
      h1.t2!= data.headline
      +bodytext(data, "hidden-phone")
      +links




