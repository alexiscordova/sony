include ../../../common/html/jade-helpers.jade
+includeCSS('footnotes')
+includeJavascriptModule('footnotes')

//- START Footnotes
section.footnotes-wrapper.container.full-bleed-no-max.m-full-bleed(id=data.id)
  h2.p3
    .container
      .grid #{data.header}
        i.fonticon-10-arrowhead-down

  .list
    .container
      .grid
        ol
          each footnote, i in data.footnotes
            li.p3
              span.num= i+1
              span.note= footnote
        each disclosure, i in data.disclosures
          p.p3
            !{disclosure}
            
//- END Footnotes