include ../../../common/html/jade-helpers.jade
+includeJavascriptModule('editorial-carousel-e13')

.editorial-carousel-e13
  .container
    .grid
      h6(class='t6-light')= data.title
  .container.products.pd-container
    .slimgrid
      section.editorial-carousel-e13-products(class="span12", data-mode=data.config.mode , data-variation=data.config.variation )
        .rp-overflow
          .rp-container(class="hide fade")
            i = 0
            for module in data.submodules
              d = locals.data(module.data)
              if d.type == 'product' && d.featured
                - d.layout = 'medium'
                - d.view = 'basic'
                e = { 'locals' : locals , 'data' : d }
                !{locals.partial(module.type , e )}