include ../../../common/html/jade-helpers.jade
+includeJavascriptModule('editorial-carousel-e13')

.editorial-carousel-e13
  .container
    .grid
      h6(class='t6-light')= data.title
  .container.products.pd-container
    .slimgrid
      section.editorial-carousel-e13-products(class="span12", data-mode=data.config.mode , data-variation=data.config.variation )
        .rp-overflow
          .rp-container(class="hide fade")
            i = 0
            for item in data.slide
              a(class="gallery-item m-span4 span3 medium")
                .gallery-item-inner
                  div(class="headline-counter")= item.headline.title
                  img.iq-img(alt=item.alt, data-src-desktop=item.backgroundImgSrcDesktop, data-src-tablet=item.backgroundImgSrcTablet, data-src-phone=item.backgroundImgSrcPhone, data-src-desktop-highres=item.backgroundImgSrcDesktopHighRes, data-src-tablet-highres=item.backgroundImgSrcTabletHighRes, data-src-phone-highres=item.backgroundImgSrcPhoneHighRes)
                    noscript
                      img(src=item.noscriptsrc, alt=item.alt)