extraclass = data.classes || ""
id = data.id || ""
if data.heights 
  string = "#"+id +" {height:" +data.heights.desktop+"} @media (min-width: 47.9em) and (max-width: 61.1875em) {#"+id+" {height: "+data.heights.tablet+"}} @media (max-width: 47.8999em) { #"+id+" {height: "+data.heights.phone+"}} "
  style(type = "text/css")
    #{string}
  
if data.background == "true"
  .image-module.iq-img(id= id, class= extraclass, alt= data.alt, data-src-desktop= data.srcDesktop, data-src-tablet= data.srcTablet, data-src-phone= data.srcPhone, data-src-desktop-highres= data.srcDesktopHighRes, data-src-tablet-highres= data.srcTabletHighRes, data-src-phone-highres= data.srcPhoneHighRes)
else
  .image-module
    img.iq-img(id= id, class= extraclass, alt= data.alt, data-src-desktop= data.srcDesktop, data-src-tablet= data.srcTablet, data-src-phone= data.srcPhone, data-src-desktop-highres= data.srcDesktopHighRes, data-src-tablet-highres= data.srcTabletHighRes, data-src-phone-highres= data.srcPhoneHighRes)
      noscript
          img(src= data.noscriptsrc)
