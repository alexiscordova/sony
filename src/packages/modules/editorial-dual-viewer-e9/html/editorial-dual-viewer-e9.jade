
section(class='mode-'+data.mode.toLowerCase()).edv.container

  header
    h2 #{data.header.title}
    p #{data.header.description}
    a(href = data.header.linkURL) Learn more

  div.edv-images
    - for (var i = 0; i < 2 && i < data.images.length; i++)
      edvImage = data.images[i]
      figure(class='image-'+(i+1)).edv-image
        div.edv-image-wrapper.iq-img(data-src-desktop=edvImage.srcDesktop, data-src-tablet=edvImage.srcTablet, data-src-phone=edvImage.srcPhone, data-src-desktop-highres=edvImage.srcDesktopHighRes, data-src-tablet-highres=edvImage.srcTabletHighRes, data-src-phone-highres=edvImage.srcPhoneHighRes)
          span
          img.iq-img(data-src-desktop=edvImage.srcDesktop, data-src-tablet=edvImage.srcTablet, data-src-phone=edvImage.srcPhone, data-src-desktop-highres=edvImage.srcDesktopHighRes, data-src-tablet-highres=edvImage.srcTabletHighRes, data-src-phone-highres=edvImage.srcPhoneHighRes)
        figcaption #{edvImage.title}
    div.edv-scrubber-container
      a.edv-scrubber(href="#", title="Alternate between images.") Scrub
