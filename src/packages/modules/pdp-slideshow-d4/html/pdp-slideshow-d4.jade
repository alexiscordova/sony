include ../../../common/html/jade-helpers.jade

- desc = 'Here are some modules with unique data:'
- layout1 = [ "" ]

.container
  .grid
    h2.l1 PDP Slide Show
section.pdp-slideshow
  .pdp-slideshow-outer
    .pdp-slideshow-inner
      i = 0
      for slide in data.slides
        slideData = locals.data( slide.data )
        .pdp-slideshow-slide
          .ghost-center-wrap
            .ghost-center
              img( class='iq-img', data-src=slideData.productImg.src, alt=slideData.productImg.alt )
              noscript
                img( src=slideData.productImg.noscriptSrc )
          e = { 'locals' : locals , 'data' : slideData }
          //!{locals.partial(module.type , e )}

  ul( class='thumb-nav' )
    for slide in data.slides
      slideData = locals.data(slide.data)
      li.thumb
        a( class='light', href='#' )
          img( class='iq-img', data-src=slideData.thumb.thumbnailSrc, alt='Iq Image' )
          noscript
            img( src=slideData.thumb.thumbnailNoScript )


