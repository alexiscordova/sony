include ../../../common/html/jade-helpers.jade
+includeCSS('language-interstitial-z5')

e = {"locals":locals, "data":data}

+mainElement( ['language-interstitial'] )
  .module-li-bg
    .hero-image
      e = {"locals":locals, "data":data.image}
      !{locals.partial('packages/modules/image/html/image.jade' , e)}
      .inner.container
        .grid.no-grid-at-767
          .span7
            .box.table-center-wrap
              .table-center
                h1.t2= data.headline
                if data.buttons
                  .btn-holder
                    each link in data.buttons
                      +link( link, [ "btn" ] )
  .module-li-main
    .container
     .grid.m-grid-at-979.no-grid-at-767
       .span6
         .module-text-box
           p.p2-bold.language-interstitial-hdg= data.leftBlock.headline
           p.p3.language-interstitial-text= data.leftBlock.content
       .span6
         .module-text-box
           p.p2-bold.language-interstitial-hdg= data.rightBlock.headline
           p.p3.language-interstitial-text= data.rightBlock.content
