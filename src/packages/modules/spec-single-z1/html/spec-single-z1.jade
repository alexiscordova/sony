include ../../../common/html/jade-helpers.jade
+includeCSS('spec-single-z1')
+includeJavascriptModule('spec-single-z1')

if data.submodules
  productData = locals.data( data.submodules[0].data )
  - productData.view = 'single-spec'
  model = productData.model

.spec-single

  .container
    .grid.spec-title-wrap
      +breadcrumbLink( data.titleLink )
      h1.t2.spec-title !{ data.title }
      p.product-model.p5
        span(itemprop="model") !{ model }

    .grid
      +jumpLinks( data.internalLinks )


  .sticky-nav.spec-sticky-nav
    .container
      .grid
        h2.t6.sticky-nav-title !{ data.title }
        +jumpLinks( data.internalLinks, true )


  section.spec-product#specifications
    if data.submodules
      e = { "locals" : locals, "data" : productData, "labels" : data.labels }
      !{locals.partial( data.submodules[0].type, e )}

  section.spec-tiles-wrap.container#features
    .grid
      h3.l1.features-title !{ data.features.title }

    if data.features.tiles
      .spec-tiles.slimgrid.no-grid-at-479
        each tile in data.features.tiles
          .spec-tile.span4
            if tile.img
              figure
                mixin iQImage( tile.img )

            .tile-content
              h3.t6.tile-title !{ tile.title }
              p.p3 !{ tile.description }
              if tile.link
                p.p3
                  +link( tile.link )
