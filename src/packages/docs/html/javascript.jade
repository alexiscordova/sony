mixin doccoModules()
  doccoModules = locals.doccoModules()
  for name in doccoModules
    title = name.replace(/.html/g, '').replace(/-/g, ' ')
    a( href = 'docco/modules/' + name, title=title) !{ title }

mixin doccoSecondary()
  doccoSecondary = locals.doccoSecondary()
  for name in doccoSecondary
    title = name.replace(/.html/g, '').replace(/-/g, ' ')
    a( href = 'docco/secondary/' + name, title=title) !{ title }

mixin doccoGlobal()
  doccoGlobal = locals.doccoGlobal()
  for name in doccoGlobal
    title = name.replace(/.html/g, '').replace(/-/g, ' ')
    a( href = 'docco/global/' + name, title=title) !{ title }

include ../../common/html/ieconditionals.html
doctype 5

include docs-head.html
body( data-spy = "scroll", data-target = ".bs-docs-sidebar" )
  include docs-nav.html

  header.jumbotron.subhead#overview
    .container
      .grid.no-grid-at-767
        h1 JS Documentation
        p Documentation for each class may be found on the links below.

  .container
    .grid.no-grid-at-767
      .span4
        h3 Global Classes
        hr
        .module-nav
          +doccoGlobal()

      .span4
        h3 Modules
        hr
        .module-nav
          +doccoModules()

      .span4
        h3 Secondary Classes
        hr
        .module-nav
          +doccoSecondary()

  include docs-foot.html
</html>