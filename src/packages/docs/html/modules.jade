include ../../common/html/jade-helpers.jade
include ../../common/html/ieconditionals.html

include docs-head.html
body( data-spy = "scroll", data-target = ".bs-docs-sidebar" )
  include docs-nav.html

  header.jumbotron.subhead#overview
    .container
      .grid.no-grid-at-767
        h1 Module Demos
        p Individual Module Demos.

  .container
    .grid.no-grid-at-767
      .span4
        input(id="module-search", type="search", placeholder="Search for a module...", autofocus)

  .container
    .grid.no-grid-at-767
      .span4
        h3 Single Module Demos
        hr
        nav.module-nav
          +docsLinks( 'demos', 'demo', 'demo-x99-demo.html' )
