mixin demos()
  lastPageTitle = null;
  demos = locals.demos()
  - demos.splice( demos.indexOf("demo-x99-demo.html"), 1 )
  - demos.sort( function(a, b) { if (a.toLowerCase() < b.toLowerCase()) return -1; if (a.toLowerCase() > b.toLowerCase()) return 1; return 0; })
  for name in demos
    title = name.replace(/.html/g, '').replace(/-/g, ' ').replace(/ demo/, '')
    firstSpace = title.indexOf(' ')
    prefix = firstSpace > -1 ? title.substring( 0, firstSpace ) : title
    if lastPageTitle != null && lastPageTitle != prefix
      hr
    a( href = '../build/debug/' + name, title=title) !{ title }
    lastPageTitle = prefix


